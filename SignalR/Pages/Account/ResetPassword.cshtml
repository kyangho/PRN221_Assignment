@page
@model PRNAssignment.Pages.Account.ResetPasswordModel
@{
}

<div id="form">
    <h3 style="padding: 20px;">Forgot your account password?</h3>
    <div id="form-content">
        <span class="msg-error">@ViewData["errMsg"]</span><br />
        <form method="post">
            <input asp-for="Email" type="hidden" /><br />

            <label>New Password<span style="color: red;">*</span></label><br />
            <input asp-for="NewPassword" type="password" /><br />
            <span class="msg-error" asp-validation-for="NewPassword"></span><br />

            <label>Re-Password<span style="color: red;">*</span></label><br />
            <input asp-for="RePassword" type="password" /><br />
            <span class="msg-error">@ViewData["msg-repassword"]</span><br />

            <input type="submit" value="Save" style="margin-bottom: 30px;" /><br />
        </form>
    </div>
</div>