@page
@model IndexModel
@{
    Layout = "_Layout1";
}

<div id="content-left">
    <h3>CATEGORY</h3>
    <ul>
        @foreach (var item in Model.Categories)
        {
            <a asp-route-id="@item.CategoryId">
            <li>@item.CategoryName</li>
            </a>
        }
        <li>@ViewData["size"]</li>
    </ul>
</div>
